# =====================================
# Configuración de PostgreSQL
# =====================================
POSTGRES_USER=tu_usuario_postgresql
POSTGRES_PASSWORD=tu_contraseña_postgresql
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=nombre_de_tu_base_de_datos

# =====================================
# Configuración de Elasticsearch
# =====================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# =====================================
# Configuración de Redis
# =====================================
REDIS_HOST=localhost
REDIS_PORT=6379

# =====================================
# Configuración de Redpanda/Kafka
# =====================================
# Lista de brokers separados por comas
KAFKA_BROKERS=localhost:9092

# =====================================
# Configuración de Topics de Kafka
# =====================================
USER_EVENTS_TOPIC=user_events

# =====================================
# Configuración Adicional (Opcional)
# =====================================
# Tiempo de expiración de caché en segundos (ejemplo: 1 hora)
CACHE_EXPIRATION=3600

# Número de componentes para SVD en la factorización de matrices
SVD_COMPONENTS=100
